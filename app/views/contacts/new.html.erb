<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<h1>お問合せ</h1>
<p><%= notice %></p>
<%= form_for(@contacts, url: confirm_contacts_path) do |f| %>
<% if @contacts.errors.any? %>
    <div id="error_explanation">
      <h2><%= @contacts.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @contacts.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
<% end %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email, class: 'form-control' %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit "確認する", class: 'btn btn-primary btn-block' %>
<% end %>
</div>
</div>